%p#notice= notice

%p.name
  %b Name:
  = @product.name
%p.category_id
  %b Category:
  = @product.category_name
.description
  %b Description:
  = simple_format(@product.description)
%p.price
  %b Price
  = @product.price
%p.image
  %b Image
  = image_tag(@product.image_url) if @product.image?
%p.vendible
  %b Vendible
  = @product.display_vendible
%p.recommend
  %b Recommend
  = @product.display_recommend
  
= link_to 'Edit', edit_product_path(@product)
\|
= link_to 'Back', products_path
